<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.developer.moodoftheday.ActivityArkadasDegil">

    <ImageButton
        android:id="@+id/proffRes"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/hesap"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/takipEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proffRes"
        android:layout_marginTop="34dp"
        android:layout_toLeftOf="@+id/proffRes"
        android:layout_toStartOf="@+id/proffRes"
        android:text="Takip Et" />

    <Button
        android:id="@+id/mesaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/takipEt"
        android:layout_toEndOf="@+id/proffRes"
        android:layout_toRightOf="@+id/proffRes"
        android:text="mesaj" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="47dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Kişinin Modları Gizlidir .Görebilmek İçin Takip Ediniz."
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/kisiAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mesaj"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
