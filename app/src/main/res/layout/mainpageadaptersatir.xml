<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/KisiResim"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="14dp"
        />

    <TextView
        android:id="@+id/kisiİsim"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/KisiResim"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/KisiResim"
        android:layout_toRightOf="@+id/KisiResim"
        android:text="kisiİsim" />

    <TextView
        android:id="@+id/PostDurum"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:text="kisiİsim"
        android:layout_below="@+id/kisiİsim"
        android:layout_alignLeft="@+id/kisiİsim"
        android:layout_alignStart="@+id/kisiİsim" />

    <ImageView
        android:id="@+id/ModResim"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/kisiİsim"
        />

</RelativeLayout>
</android.support.v7.widget.CardView>